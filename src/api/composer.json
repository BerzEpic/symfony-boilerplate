{
    "name": "thecodingmachine/companies-and-products",
    "type": "project",
    "license": "MIT",
    "description": "A Symfony GraphQL API",
    "authors": [{
        "name": "TheCodingMachine"
    }],
    "require": {
        "php": "^7.2.5",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "doctrine/doctrine-migrations-bundle": "^3.0",
        "nelmio/cors-bundle": "^2.0",
        "symfony/apache-pack": "^1.0",
        "symfony/console": "*",
        "symfony/dotenv": "*",
        "symfony/flex": "^1.3.1",
        "symfony/framework-bundle": "*",
        "symfony/http-client": "5.1.*",
        "symfony/messenger": "5.1.*",
        "symfony/monolog-bundle": "^3.5",
        "symfony/process": "5.1.*",
        "symfony/security-bundle": "5.1.*",
        "symfony/swiftmailer-bundle": "^3.4",
        "symfony/translation": "5.1.*",
        "symfony/yaml": "*",
        "thecodingmachine/graphqlite-bundle": "^4.0@dev",
        "thecodingmachine/safe": "^1.1",
        "thecodingmachine/tdbm-bundle": "^5.1",
        "thecodingmachine/tdbm-graphql-bundle": "^4.0@dev"
    },
    "require-dev": {
        "doctrine/coding-standard": "^7.0",
        "pepakriz/phpstan-exception-rules": "^0.10.1",
        "pestphp/pest": "^0.1.5",
        "phpstan/phpstan": "^0.12.19",
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.5",
        "symfony/debug-pack": "^1.0",
        "symfony/profiler-pack": "^1.0",
        "thecodingmachine/phpstan-safe-rule": "^1.0",
        "thecodingmachine/phpstan-strict-rules": "^0.12.0"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "pest": "pest --coverage",
        "csfix": "phpcbf",
        "cscheck": "phpcs",
        "phpstan": "phpstan analyse src/ -c phpstan.neon --level=max --no-progress -vvv --memory-limit=1024M",
        "deptrac": "php deptrac.phar"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.1.*"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
